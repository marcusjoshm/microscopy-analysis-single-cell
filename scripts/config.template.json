    "roi_scale_factor": 4.0,
    "min_particle_size": 0.1,
    "default_bins": 5,
    "continue_on_error": false,
    "auto_close_imagej": true
  },
  "detection": {
    "auto_detect_paths": true,
    "validate_paths": true,
    "last_detection_date": null,
    "detection_cache": {}
  }
} 