{
  "name": "Microscopy Single-Cell Analysis Workflow",
  "version": "2.0.0",
  "description": "Automated configuration for single-cell microscopy analysis workflow",
  "software": {
    "imagej_path": null,
    "cellpose_env": null,
    "python_path": null
  },
  "system": {
    "max_workers": 4,
    "temp_directory": "/tmp",
    "log_level": "INFO",
    "debug_mode": false
