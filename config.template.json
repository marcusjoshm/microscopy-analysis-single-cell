{
  "name": "Microscopy Single-Cell Analysis Workflow",
  "version": "1.0.0",
  "description": "Complete workflow for analyzing microscopy data with different conditions and timepoints",
  "paths": {
    "imagej_path": "/Applications/Fiji.app/Contents/MacOS/ImageJ-macosx",
    "data_directory": "/path/to/your/data",
    "output_directory": "/path/to/output"
  },
  "system": {
    "max_workers": 4,
    "temp_directory": "/tmp"
  },
  "logging": {
    "level": "INFO",
    "console": true,
    "file": true,
    "file_path": "workflow.log"
  },
  "workflow_settings": {
    "use_pyimagej": false,
    "roi_scale_factor": 4.0,
    "min_particle_size": 0.1,
    "continue_on_error": false
  },
  "file_patterns": {
    "roi_pattern": "{condition}_{region}_{timepoint}_rois.zip",
    "image_pattern": "{condition}_{region}_{timepoint}_{channel}.tif",
    "cell_pattern": "CELL{cell_number}.tif",
    "mask_pattern": "MASK_CELL{cell_number}.tif"
  }
}
